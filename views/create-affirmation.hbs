<h2>Create new affirmation</h2>



{{#if dbError}}
    <p>Can not display this page now. We are working to fix this problem.</p>
{{else}}

    {{#if errors.length}}
        <div class="toast toast-warning">
    <p>Can not create a new affirmation because:</p>
    <ul>
        {{#each errors }}
            <li>{{this}}</li>
        {{/each}}
    </ul>
        </div>
    {{/if}}
    <form action="" method="post">
        <input type="date" placeholder="Date" name="date" value="{{date}}" />
        <input type="text" placeholder="Note" name="note" value="{{note}}"/>
        <input type="submit" value="submit" />

    </form>
{{/if}}